{% extends 'base.html.twig' %}

{% block title %}Hello CreationPartieController!{% endblock %}

{% block body %}
    <h1>Création d'une partie</h1>
    <h4>Ajouter l'adresse mail d'un autre joueur pour l'inviter dans votre partie.</h4>
    {% for messages in app.flashes('danger') %}
        <div class="alert alert-danger">
            {{ messages }}
        </div>
    {% endfor %}

{{ form_start(formCreationPartie) }}
{{ form_widget(formCreationPartie) }}
    <button type="submit" class="btn">Créer la partie</button>
{{ form_end(formCreationPartie) }}
{% endblock %}
